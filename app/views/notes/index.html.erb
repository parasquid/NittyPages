<div class="py-2">
<% @notes.each do |note| %>
  <div class="py-2">
    <%= link_to note_path(note) do %>
      <span class="underline text-blue-600">
        <%= note.date %>
      </span>
    <% end %>
    <%= render "checklist", note: note %>
  </div>
<% end %>
</div>

<%= link_to "Today", note_path(Date.today.to_s), class: "cursor-pointer bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mx-2" %>
